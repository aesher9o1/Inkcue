<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:focusable="true"
            android:id="@+id/human"
            android:layout_marginTop="20dip"
            android:layout_width="120dip"
            android:layout_height="120dip"
            android:src="@drawable/asset_human"
            />

        <TextView
            android:layout_marginTop="4dip"
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="User Name"
            android:gravity="center_horizontal"
            android:textSize="24sp"
            />
        <TextView
            android:layout_marginTop="8dip"
            android:id="@+id/Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:text="Basic Information"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            />
        <View
            android:id="@+id/view"
            android:layout_marginLeft="39dip"
            android:layout_marginRight="39dip"
            android:background="@color/main"
            android:layout_below="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="2dip"/>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:gravity="center_horizontal"
            >
            <TextView

                android:layout_marginTop="19dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="First Name"
                android:textSize="16sp"
                />

            <EditText

                android:layout_marginBottom="3dip"
                android:layout_marginTop="19dip"
                android:paddingTop="2dip"
                android:paddingBottom="2dip"
                android:layout_width="170dip"
                android:layout_height="wrap_content"
                android:background="@drawable/edittectbox"
                android:textSize="@dimen/about_us_text_size"
                android:maxLength="13"
                android:layout_marginStart="60dp"
                android:inputType="text"
                android:textAlignment="center"
                android:maxLines="1"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            >

            <TextView
                android:layout_marginEnd="13dip"
                android:maxLength="13"
                android:layout_marginTop="3dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Middle Name"
                android:textSize="16sp"
                />

            <EditText
                android:layout_marginStart="35dip"
                android:layout_marginBottom="3dip"
                android:layout_marginTop="3dip"
                android:paddingTop="2dip"
                android:paddingBottom="2dip"
                android:layout_width="170dip"
                android:layout_height="wrap_content"
                android:background="@drawable/edittectbox"
                android:textSize="@dimen/about_us_text_size"
                android:maxLength="13"
                android:inputType="text"
                android:textAlignment="center"
                android:maxLines="1"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            >

            <TextView
                android:layout_marginEnd="28dip"
                android:maxLength="13"
                android:layout_marginTop="3dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Last Name"
                android:textSize="16sp"
                />

            <EditText
                android:layout_marginStart="37dip"
                android:layout_marginBottom="3dip"
                android:layout_marginTop="3dip"
                android:paddingTop="2dip"
                android:paddingBottom="2dip"
                android:layout_width="170dip"
                android:layout_height="wrap_content"
                android:background="@drawable/edittectbox"
                android:textSize="@dimen/about_us_text_size"
                android:maxLength="13"
                android:inputType="text"
                android:textAlignment="center"
                android:maxLines="1"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="22dip"
                android:layout_marginTop="3dip"
                android:fontFamily="sans-serif"
                android:maxLength="13"
                android:text="Gender"
                android:textSize="16sp" />

            <EditText
                android:layout_width="170dip"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dip"
                android:layout_marginStart="70dip"
                android:layout_marginTop="3dip"
                android:background="@drawable/edittectbox"
                android:inputType="text"
                android:maxLength="13"
                android:maxLines="1"
                android:paddingBottom="2dip"
                android:paddingTop="2dip"
                android:textAlignment="center"
                android:textSize="@dimen/about_us_text_size" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="31dip"
                android:layout_marginTop="3dip"
                android:fontFamily="sans-serif"
                android:maxLength="13"
                android:text="Email"
                android:textSize="16sp" />

            <EditText
                android:layout_width="170dip"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dip"
                android:layout_marginStart="75.5dip"
                android:layout_marginTop="3dip"
                android:background="@drawable/edittectbox"
                android:inputType="textEmailAddress"
                android:maxLength="13"
                android:maxLines="1"
                android:paddingBottom="2dip"
                android:paddingTop="2dip"
                android:textAlignment="center"
                android:textSize="@dimen/about_us_text_size" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:layout_marginEnd="11dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dip"
                android:fontFamily="sans-serif"
                android:text="Contact Number"
                android:textSize="16sp" />

            <EditText
                android:layout_width="170dip"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dip"
                android:layout_marginStart="15dip"
                android:layout_marginTop="3dip"
                android:background="@drawable/edittectbox"
                android:inputType="phone"
                android:maxLength="13"
                android:maxLines="1"
                android:paddingBottom="2dip"
                android:paddingTop="2dip"
                android:textAlignment="center"
                android:textSize="@dimen/about_us_text_size" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dip"
                android:layout_marginTop="3dip"
                android:fontFamily="sans-serif"
                android:maxLength="13"
                android:text="Date of Birth"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/dateofbirth"
                android:layout_width="170dip"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dip"
                android:layout_marginStart="50dip"
                android:layout_marginTop="3dip"
                android:background="@drawable/edittectbox"
                android:inputType="textEmailAddress"
                android:maxLength="13"
                android:maxLines="1"
                android:paddingBottom="2dip"
                android:paddingTop="2dip"
                android:textAlignment="center"
                android:textSize="@dimen/about_us_text_size" />

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:gravity="center_horizontal"
            >
            <TextView
                android:layout_marginTop="3dip"
                android:layout_marginEnd="3dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Nationality"
                android:textSize="16sp"
                />

            <EditText
                android:layout_marginTop="3dip"
                android:layout_marginBottom="3dip"
                android:paddingTop="2dip"
                android:paddingBottom="2dip"
                android:layout_width="170dip"
                android:layout_height="wrap_content"
                android:background="@drawable/edittectbox"
                android:textSize="@dimen/about_us_text_size"
                android:maxLength="13"
                android:layout_marginStart="67dp"
                android:inputType="text"
                android:textAlignment="center"
                android:maxLines="1"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="25dip"
                android:layout_marginTop="3dip"
                android:fontFamily="sans-serif"
                android:maxLength="13"
                android:text="Country"
                android:textSize="16sp" />

            <EditText
                android:layout_width="170dip"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dip"
                android:layout_marginStart="65dip"
                android:layout_marginTop="3dip"
                android:background="@drawable/edittectbox"
                android:inputType="text"
                android:maxLength="13"
                android:maxLines="1"
                android:gravity="start"
                android:paddingStart="4dip"
                android:paddingEnd="4dip"
                android:paddingBottom="2dip"
                android:paddingTop="2dip"
                android:textAlignment="center"
                android:textSize="@dimen/about_us_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dip"
                android:fontFamily="sans-serif"
                android:maxLength="13"
                android:text="City"
                android:textSize="16sp" />

            <EditText
                android:layout_width="170dip"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dip"
                android:layout_marginStart="120dip"
                android:layout_marginTop="3dip"
                android:background="@drawable/edittectbox"
                android:inputType="text"
                android:maxLength="13"
                android:maxLines="1"
                android:paddingBottom="2dip"
                android:paddingTop="2dip"
                android:textAlignment="center"
                android:textSize="@dimen/about_us_text_size" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:gravity="center_horizontal"
            >
            <TextView
                android:layout_marginTop="3dip"
                android:layout_marginEnd="3dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Pin Code"
                android:textSize="16sp"
                />

            <EditText
                android:layout_marginTop="3dip"
                android:layout_marginBottom="3dip"
                android:paddingTop="2dip"
                android:paddingBottom="2dip"
                android:layout_width="170dip"
                android:layout_height="wrap_content"
                android:background="@drawable/edittectbox"
                android:textSize="@dimen/about_us_text_size"
                android:maxLength="13"
                android:layout_marginStart="81dp"
                android:inputType="number"
                android:textAlignment="center"
                android:maxLines="1"
                />
        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="18dip"
                android:layout_marginTop="3dip"
                android:fontFamily="sans-serif"
                android:maxLength="13"
                android:text="Address"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="170dip"
                android:layout_height="100dip"
                android:layout_marginBottom="3dip"
                android:layout_marginStart="72dip"
                android:layout_marginTop="3dip"
                android:background="@drawable/edittectbox"
                android:gravity="start"
                android:inputType="text|textMultiLine"
                android:paddingBottom="5dip"
                android:maxLines="7"
                android:scrollbars="vertical"
                android:maxWidth="160dip"
                android:paddingEnd="9dip"
                android:paddingStart="9dip"
                android:paddingTop="5dip"
                android:textSize="@dimen/about_us_text_size" />

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dip"
                android:fontFamily="sans-serif"
                android:text="Brief Description"
                android:textSize="16sp" />

            <EditText
                android:layout_width="170dip"
                android:layout_height="100dip"
                android:layout_marginBottom="3dip"
                android:layout_marginStart="32dip"
                android:layout_marginTop="3dip"
                android:background="@drawable/edittectbox"
                android:inputType="text|textMultiLine"
                android:paddingStart="9dip"
                android:paddingEnd="9dip"
                android:paddingBottom="5dip"
                android:paddingTop="5dip"
                android:textSize="@dimen/about_us_text_size" />

        </LinearLayout>



        <Button
            android:layout_gravity="center_horizontal"
            android:id="@+id/next_fragment"
            android:layout_marginBottom="25dip"
            android:paddingStart="14dip"
            android:paddingEnd="14dip"
            android:background="@drawable/button"
            android:textColor="@color/main"
            android:layout_marginTop="30dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save and Continue"
            android:textAllCaps="false"/>








    </LinearLayout>





</ScrollView>